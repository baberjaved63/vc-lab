<%= form_with(model: person) do |form| %>
  <ul>
    <% person.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  </ul>

  <div class="form-group">
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :phone %>
    <%= form.phone_field :phone, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :probability %>
    <%= form.number_field :probability, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :company %>
    <%= form.select :company_id, options_for_select(Company.all.pluck(:name, :id), person.company_id), {include_blank: "-"}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :stage %>
    <%= form.select :stage, stages_options(person), {}, class: "form-control" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
